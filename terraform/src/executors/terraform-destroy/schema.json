{
  "$schema": "http://json-schema.org/schema",
  "$id": "terraform-destroy",
  "title": "Terraform Destroy Executor Options",
  "type": "object",
  "properties": {
    "tfDir": {
      "type": "string",
      "description": "Subdirectory under project root for Terraform config."
    },
    "env": { "type": "string", "description": "Environment / workspace name." },
    "workspaceStrategy": {
      "type": "string",
      "enum": ["derive", "explicit", "none"],
      "default": "derive"
    },
    "varFile": {
      "type": "string",
      "description": "Explicit tfvars file path for consistent destroy."
    },
    "force": {
      "type": "boolean",
      "description": "Proceed even when a newer un-applied plan hash is detected (suppresses warning escalation).",
      "default": false
    }
  },
  "required": [],
  "additionalProperties": false
}
