{
  "$schema": "http://json-schema.org/schema",
  "$id": "terraform-apply",
  "title": "Terraform Apply Executor Options",
  "type": "object",
  "properties": {
    "tfDir": {
      "type": "string",
      "description": "Subdirectory under project root for Terraform config."
    },
    "env": { "type": "string", "description": "Environment / workspace name." },
    "workspaceStrategy": {
      "type": "string",
      "enum": ["derive", "explicit", "none"],
      "default": "derive"
    },
    "planFile": {
      "type": "string",
      "description": "Explicit path to a plan file (tfplan)."
    },
    "force": {
      "type": "boolean",
      "description": "Bypass stale plan hash guard.",
      "default": false
    }
  },
  "required": [],
  "additionalProperties": false
}
